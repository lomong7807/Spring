package sub2;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Component;

@Component("com")
public class Computer {

	private CPU cpu;
	private RAM ram;
	private HDD hdd;
	
	// DI - Constructor Inject
	@Autowired
	public Computer(CPU cpu, RAM ram, HDD hdd) {
		this.cpu = cpu;
		this.ram = ram;
		this.hdd = hdd;
	}
	
	
	public void show() {
		cpu.show();
		ram.show();
		hdd.show();
	}
	
}
